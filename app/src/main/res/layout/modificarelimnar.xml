<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/code1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/agrega1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Codigo tutor"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/user4"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/idnom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre tutor"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/idape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido Tutor"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/idtelefono1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/idcicloo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"/>

    </LinearLayout>


</LinearLayout>